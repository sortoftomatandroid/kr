<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".fragment.RegisterFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Зарегистрируйтесь быстро и бесплатно"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancel" />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginVertical="16dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/stroke"
        android:hint="Имя*"
        android:inputType="textCapWords"
        android:padding="8dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toStartOf="@id/surname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/stroke"
        android:hint="Фамилия*"
        android:inputType="textCapWords"
        android:padding="8dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/emailOrPhone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/stroke"
        android:hint="Email или телефон*"
        android:padding="8dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/stroke"
        android:hint="Пароль*"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/emailOrPhone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Регистрация"
        android:textColor="@color/black"
        app:backgroundTint="@color/light_blue"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_navigation"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.NavigationFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="64dp"
        android:backgroundTint="@color/red"
        android:clickable="false"
        android:gravity="center"
        android:text="Навигация по сайту"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/light_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:text="Мой профиль"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:text="Избранное"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:text="Проигрыватель"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/anime_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:text="Список аниме"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:text="Отзывы"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:text="История просмотра"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/light_red" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/role"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="64dp"
        android:backgroundTint="@color/brown"
        android:gravity="center"
        android:text="Вернуться к выбору роли"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="8dp" />

</LinearLayout>